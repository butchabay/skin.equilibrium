        <!-- media infos -->
        <control type="group">
            <animation effect="fade" time="200">VisibleChange</animation>
            <visible>[Player.ShowInfo | Window.IsActive(MusicOSD)] + ![Window.IsVisible(AddonSettings) | Window.IsVisible(SelectDialog) | Window.IsVisible(VisualisationPresetList)]</visible>
            <control type="image">
                <posx>0</posx>
                <posy>-225</posy>
                <width>1920</width>
                <height>384</height>
                <texture flipy="true">HomeNowPlayingBack.png</texture>
            </control>
            <control type="label">
                <description>Partymode Header label</description>
                <posx>45</posx>
                <posy>8</posy>
                <width>1200</width>
                <height>38</height>
                <align>left</align>
                <aligny>center</aligny>
                <font>font13</font>
                <textcolor>color2</textcolor>
                <shadowcolor>black</shadowcolor>
                <label>$LOCALIZE[589]</label>
                <visible>MusicPartyMode.Enabled</visible>
            </control>
            <control type="label">
                <description>Normal Header label</description>
                <posx>45</posx>
                <posy>8</posy>
                <width>1200</width>
                <height>38</height>
                <align>left</align>
                <aligny>center</aligny>
                <font>font13</font>
                <textcolor>color2</textcolor>
                <shadowcolor>black</shadowcolor>
                <label>$INFO[musicplayer.Playlistposition,$LOCALIZE[554]: ]$INFO[musicplayer.Playlistlength, / ]</label>
                <visible>!MusicPartyMode.Enabled</visible>
            </control>
            <control type="label">
                <description>Clock label</description>
                <posx>1875</posx>
                <posy>8</posy>
                <width>1200</width>
                <height>38</height>
                <align>right</align>
                <aligny>center</aligny>
                <font>font13</font>
                <textcolor>color2</textcolor>
                <shadowcolor>black</shadowcolor>
                <label>$INFO[System.Time]</label>
                <animation effect="slide" start="0,0" end="-158,0" time="0" condition="Window.IsVisible(MusicOSD)">conditional</animation>
            </control>
            <control type="image">
                <posx>0</posx>
                <posy>345r</posy>
                <width>1920</width>
                <height>345</height>
                <texture>HomeNowPlayingBack.png</texture>
            </control>
            <control type="image">
                <description>cover image</description>
                <posx>30</posx>
                <posy>375r</posy>
                <width>450</width>
                <height>345</height>
                <texture fallback="DefaultAlbumCover.png">$INFO[Player.Art(thumb)]</texture>
                <aspectratio aligny="bottom">keep</aspectratio>
                <bordertexture border="8">ThumbShadow.png</bordertexture>
                <bordersize>8</bordersize>
            </control>
            <control type="group">
                <posx>495</posx>
                <posy>278r</posy>
                <control type="label" id="1">
                    <description>Heading label</description>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>1365</width>
                    <height>38</height>
                    <align>left</align>
                    <font>font13</font>
                    <label>$LOCALIZE[31040]</label>
                    <textcolor>color2</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <animation effect="slide" start="0,0" end="0,57" time="0" condition="IsEmpty(MusicPlayer.Artist) + IsEmpty(MusicPlayer.Album)">conditional</animation>
                </control>
                <control type="label" id="1">
                    <description>Artist label</description>
                    <posx>30</posx>
                    <posy>45</posy>
                    <width>1365</width>
                    <height>38</height>
                    <align>left</align>
                    <font>font12</font>
                    <label>$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, - ]</label>
                    <textcolor>grey3</textcolor>
                    <shadowcolor>black</shadowcolor>
                </control>
                <control type="grouplist">
                    <posx>30</posx>
                    <posy>90</posy>
                    <width>1365</width>
                    <height>52</height>
                    <itemgap>8</itemgap>
                    <orientation>horizontal</orientation>
                    <control type="label">
                        <width min="15" max="1050">auto</width>
                        <height>45</height>
                        <font>font30</font>
                        <align>left</align>
                        <aligny>center</aligny>
                        <label>$INFO[Player.Title]</label>
                        <textcolor>color8</textcolor>
                        <scroll>true</scroll>
                    </control>
                    <control type="image">
                        <description>Audio Codec Image</description>
                        <width>120</width>
                        <height>52</height>
                        <aspectratio align="right">keep</aspectratio>
                        <texture>$INFO[MusicPlayer.Codec,flagging/audio/,.png]</texture>
                    </control>
                    <control type="group">
                        <description>Rating</description>
                        <width>165</width>
                        <height>52</height>
                        <control type="image">
                            <description>rating back</description>
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>165</width>
                            <height>52</height>
                            <aspectratio align="left">stretch</aspectratio>
                            <texture border="5">flagging/blank.png</texture>
                        </control>
                        <control type="image">
                            <description>Rating</description>
                            <posx>8</posx>
                            <posy>0</posy>
                            <width>150</width>
                            <height>52</height>
                            <aspectratio align="center">keep</aspectratio>
                            <texture fallback="LeftRating/rating0.png">$INFO[Player.StarRating,LeftRating/]</texture>
                        </control>
                    </control>
                </control>
                <control type="label">
                    <posx>0</posx>
                    <posy>180</posy>
                    <width>1365</width>
                    <height>38</height>
                    <label>$LOCALIZE[209]: $INFO[MusicPlayer.offset(1).Artist,, - ]$INFO[MusicPlayer.offset(1).Title]</label>
                    <align>center</align>
                    <aligny>center</aligny>
                    <font>font12</font>
                    <textcolor>grey</textcolor>
                    <scroll>true</scroll>
                    <visible>MusicPlayer.HasNext + !Window.IsVisible(MusicOSD)</visible>
                    <animation effect="fade" time="200">VisibleChange</animation>
                </control>
            </control>
            <control type="group">
                <posx>495</posx>
                <posy>142r</posy>
                <control type="label">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>150</width>
                    <height>60</height>
                    <font>font13</font>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[Player.Time(hh:mm:ss)]</label>
                </control>
                <control type="progress">
                    <description>Progressbar</description>
                    <posx>150</posx>
                    <posy>22</posy>
                    <width>1080</width>
                    <height>24</height>
                    <info>Player.Progress</info>
                </control>
                <control type="label">
                    <posx>1380</posx>
                    <posy>0</posy>
                    <width>150</width>
                    <height>60</height>
                    <font>font13</font>
                    <align>right</align>
                    <aligny>center</aligny>
                    <label>$INFO[Player.Duration(hh:mm:ss)]</label>
                </control>
            </control>
        </control>
        <!-- codec & viz infos -->
        <control type="group" id="0">
            <posx>0</posx>
            <posy>75</posy>
            <visible>Player.ShowCodec + ![Window.IsVisible(script-XBMC_Lyrics-main.xml) | Window.IsVisible(VisualisationSettings) | Window.IsVisible(VisualisationPresetList)]</visible>
            <animation effect="fade" time="200">VisibleChange</animation>
            <control type="image">
                <description>media info background image</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>158</height>
                <colordiffuse>AAFFFFFF</colordiffuse>
                <texture>black-back.png</texture>
            </control>
            <control type="label">
                <description>row 1 label</description>
                <posx>75</posx>
                <posy>15</posy>
                <label>-</label>
                <align>left</align>
                <label>$INFO[musicplayer.Codec,$LOCALIZE[21446]: ,]$INFO[musicplayer.Bitrate, · $LOCALIZE[623]: ,kbps]$INFO[musicplayer.bitspersample, · $LOCALIZE[612]: ,]$INFO[musicplayer.Samplerate, · $LOCALIZE[613]: ,kHz]$INFO[musicplayer.Channels, · $LOCALIZE[21444]: ]</label>
                <font>font12</font>
            </control>
            <control type="label">
                <description>row 2 label</description>
                <posx>75</posx>
                <posy>60</posy>
                <label>-</label>
                <align>left</align>
                <label>$INFO[Visualisation.Name,, [I][COLOR=color8]($LOCALIZE[20166])[/COLOR][/I] · ]fps: $INFO[System.FPS]</label>
                <font>font12</font>
                <visible>Visualisation.Locked</visible>
            </control>
            <control type="label">
                <description>Unlocked row 2 label</description>
                <posx>75</posx>
                <posy>60</posy>
                <label>-</label>
                <align>left</align>
                <label>$INFO[Visualisation.Name,, · ]fps: $INFO[System.FPS]</label>
                <font>font12</font>
                <visible>!Visualisation.Locked</visible>
            </control>
            <control type="label">
                <description>row 3 label</description>
                <posx>75</posx>
                <posy>105</posy>
                <label>-</label>
                <align>left</align>
                <label>$INFO[Visualisation.Preset,$LOCALIZE[13388]: ]</label>
                <font>font12</font>
            </control>
        </control>
    </controls>
</window>